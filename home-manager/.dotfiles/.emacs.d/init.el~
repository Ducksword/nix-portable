;; Custom settings
(scroll-bar-mode 0)
(setq-default display-line-numbers 'relative)
(setq-default c-basic-offset 4)
(setq-default indent-tabs-mode nil)
(setq-default whitespace-style
	       '(face big-indent tabs spaces tab-mark space-mark))
(setq-default whitespace-global-modes
	       '(not shell-mode
		     help-mode
		     magit-mode
		     mogit-diff-mode
		     ibuffer-mode
		     dired-mode
		     occur-mode))
(global-whitespace-mode 1)

;; Enable Melpa
(require 'package)
(add-to-list 'package-archives
	     '("melpa" . "https://melpa.org/packages/"))
(package-initialize)
;;(package-refresh-contents)
(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(cua-mode t)
 '(custom-enabled-themes '(wombat))
 '(package-selected-packages '(amx evil ido-completing-read+)))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:family "UbuntuMono Nerd Font" :foundry "DAMA" :slant normal :weight regular :height 241 :width normal))))
 '(whitespace-space ((t nil)))
 '(whitespace-tab ((t nil))))

;; Enable Evil-mode
(require 'evil)
(evil-mode 1)

;; Ido-completing-read
(ido-mode 1)
(ido-everywhere 1)
(require 'ido-completing-read+)
(ido-ubiquitous-mode 1)

;; Amx
(require 'amx)
(amx-mode 1)
